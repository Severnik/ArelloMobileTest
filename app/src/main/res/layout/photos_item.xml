<?xml version="1.0" encoding="utf-8"?>
<com.arello.mobiletest.ui.view.PhotoGridItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/search_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uploader"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:text="Uploader: Steve Jobs" />

            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/img_desc"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/likes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_mood_black_24dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                tools:text="5" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.arello.mobiletest.ui.view.PhotoGridItem>